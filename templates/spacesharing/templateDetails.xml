<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.5" type="template">
	<name>Spacesharing</name>
	<creationDate>24 Nov 2016</creationDate>
	<author>SpaceSharing Team</author>
	<copyright>Copyright © 2016 SpaceSharing Team</copyright>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>Developer 1.0</version>
	<description><![CDATA[
		<p>Created by SpaceSharing Team</a></p>
	]]></description>
	
	<!-- Einbindung externer Dateien -->
	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>includes</folder>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<!-- Definition von Webseiten-Positionen für Joomla-->
	<positions>
		<position>mainmenu</position>
		<position>usermenu1</position>
		<position>usermenu2</position>			
		<position>roomsearch</position>
		<position>roomsearch_2</position>
		<position>map</position>
		<position>map_2</position>
		<position>ContentTop1</position>
		<position>ContentBottom1</position>
		<position>ContentTop2</position>
		<position>ContentBottom2</position>
		<position>Footer1</position>
		<position>Footer2</position>
		<position>Footer3</position>
		<position>Footer4</position>
		<position>debug</position>
		<position>copyright</position>	
		<position>footermenu</position>	
    </positions>

	<!-- Eingabefelder in Joomla zur dynamischen Anpassung von Logo und Footer -->
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logo" type="media"
					label="SpaceSharing Logo" description="Logo auswählen" />
				<field name="ftext" type="textarea"
					label="Footer Text" description="Text" />
				<field name="Name" type="text"
					label="Name" description="Name" />
				<field name="SuH" type="text"
					label="Straße und Hausnummer" description="Straße und Hausnummer" />
				<field name="PLZ" type="text"
					label="PLZ" description="PLZ" />
				<field name="Ort" type="text"
					label="Ort" description="Ort" />
				<field name="Telefon" type="text"
					label="Telefon" description="Telefon" />
				<field name="Mail" type="text"
					label="E-Mail" description="E-Mail" />
					
					
				<field name="breites_layout" type="radio" class="btn-group" label="Breites Layout verwenden:" default="yes">
					<option value="yes">ja</option>
					<option value="no">nein</option>
				</field>
			
			</fieldset>
			
			

			
		
			
		</fields>
	</config>

</extension>
